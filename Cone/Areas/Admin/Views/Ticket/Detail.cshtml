@using Cone.Extensions
@model Cone.Areas.Admin.ViewModels.Ticket.TicketDetailViewModel
@{
    ViewData["Title"] = "チケット詳細";
}
@addTagHelper *, Vereyon.Web.FlashMessage

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>チケット詳細</h1>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">編集</a>
        </div>
    </div>
    
    <flash dismissable="true" />
    
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">基本情報</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>タイトル</strong>
                </div>
                <div class="col-md-9">
                    @Model.Title
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>ステータス</strong>
                </div>
                <div class="col-md-9">
                    @switch (Model.Status)
                    {
                        case "対応中":
                            <span class="badge bg-warning text-dark">@Model.Status</span>
                            break;
                        case "解決済み":
                            <span class="badge bg-success">@Model.Status</span>
                            break;
                        case "トラブルなどで保留中":
                            <span class="badge bg-danger">@Model.Status</span>
                            break;
                        default:
                            <span class="badge bg-info">@Model.Status</span>
                            break;
                    }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>学生グループ</strong>
                </div>
                <div class="col-md-9">
                    <a asp-controller="StudentGroup" asp-action="Detail" asp-route-id="@Model.StudentGroupId">@Model.StudentGroupName</a>
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3">
                    <strong>担当者</strong>
                </div>
                <div class="col-md-9">
                    <form asp-action="AssignAdminUser" asp-route-id="@Model.Id" method="post" class="d-flex align-items-center gap-2" onsubmit="return confirmAssignment(event)">
                        <select name="adminUserId" id="adminUserSelect" class="form-select" style="max-width: 300px;">
                            @if (Model.AssignedTo == null)
                            {
                                <option value="" selected disabled>担当者を選択してください</option>
                            }
                            @foreach (var adminUser in Model.AdminUsers)
                            {
                                <option value="@adminUser.Id" selected="@(Model.AssignedTo?.Id == adminUser.Id)">
                                    @adminUser.FullName
                                </option>
                            }
                        </select>
                        <button type="submit" class="btn btn-primary btn-sm">変更</button>
                    </form>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>作成日時</strong>
                </div>
                <div class="col-md-9">
                    @Model.CreatedAt.ToJst().ToString("yyyy/MM/dd HH:mm")
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>更新日時</strong>
                </div>
                <div class="col-md-9">
                    @Model.UpdatedAt.ToJst().ToString("yyyy/MM/dd HH:mm")
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">メモ欄</h5>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrWhiteSpace(Model.Remark))
            {
                <pre class="mb-0" style="white-space: pre-wrap;">@Model.Remark</pre>
            }
            else
            {
                <div class="alert alert-info mb-0" role="alert">
                    メモはありません。
                </div>
            }
        </div>
    </div>
</div>

<script>
function confirmAssignment(event) {
    const select = document.getElementById('adminUserSelect');
    const selectedOption = select.options[select.selectedIndex];
    const adminUserName = selectedOption.text;

    return confirm(`担当者を「${adminUserName}」に変更してもよろしいですか?`);
}
</script>