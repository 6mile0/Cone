@using Cone.Enums
@using Cone.Extensions
@model List<Cone.Areas.Admin.ViewModels.Ticket.TicketViewModel>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3" role="alert">該当するチケットはありません。</div>
}
else
{
    <div class="table-responsive mt-3">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>タイトル</th>
                    <th>ステータス</th>
                    <th>学生グループ</th>
                    <th>担当者</th>
                    <th>作成日</th>
                    <th>更新日</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Detail" asp-route-id="@ticket.Id" class="text-decoration-none">
                                @ticket.Title
                            </a>
                        </td>
                        <td>
                            @switch (ticket.Status)
                            {
                                case TicketStatus.InProgress:
                                    <span class="badge bg-warning">対応中</span>
                                    break;
                                case TicketStatus.Resolved:
                                    <span class="badge bg-success">解決済み</span>
                                    break;
                                case TicketStatus.Pending:
                                    <span class="badge bg-danger">トラブルなどで保留中</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">不明</span>
                                    break;
                            }
                        </td>
                        <td>
                            <a asp-controller="StudentGroup" asp-action="Detail" asp-route-id="@ticket.StudentGroup.Id" class="text-decoration-none">
                                @ticket.StudentGroup.GroupName
                            </a>
                        </td>
                        <td>@(ticket.AssignedTo?.FullName ?? "未割当")</td>
                        <td>@ticket.CreatedAt.ToJst().ToString("yyyy/MM/dd HH:mm")</td>
                        <td>@ticket.UpdatedAt.ToJst().ToString("yyyy/MM/dd HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}