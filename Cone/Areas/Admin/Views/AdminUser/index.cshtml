@using Cone.Extensions
@model Cone.Areas.Admin.ViewModels.AdminUser.AdminUserListViewModel
@{
    ViewData["Title"] = "管理者一覧";
}
@addTagHelper *, Vereyon.Web.FlashMessage

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>管理者一覧</h1>
        <div>
            <a asp-action="AddUser" class="btn btn-primary">管理者を追加する</a>
        </div>
    </div>
    <flash dismissable="true" />


    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
            <tr>
                <th>名前</th>
                <th>種別</th>
                <th>状態</th>
                <th>作成日時</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in Model.AdminUsers)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@(user.TutorType == Cone.Enums.TutorTypes.TeachingAssistant ? "TA" : "SA")</td>
                    <td>
                        @if (user.IsAbsent)
                        {
                            <span class="badge bg-secondary">お休み中</span>
                        }
                        else
                        {
                            <span class="badge bg-success">出講中</span>
                        }
                    </td>
                    <td>@user.CreatedAt.ToJst().ToString("yyyy/MM/dd HH:mm")</td>
                    <td>
                        <form method="post" asp-action="ToggleAbsent" style="display: inline;">
                            <input type="hidden" name="adminUserId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm @(user.IsAbsent ? "btn-outline-success" : "btn-outline-secondary") me-2">
                                @(user.IsAbsent ? "出講中にする" : "お休みモードにする")
                            </button>
                        </form>
                        <form method="post" asp-action="DeleteUser" style="display: inline;">
                            <input type="hidden" name="adminUserId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('@user.FullName を削除してもよろしいですか？')">削除</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    @if (!Model.AdminUsers.Any())
    {
        <div class="alert alert-info" role="alert">
            管理者が登録されていません。
        </div>
    }
</div>