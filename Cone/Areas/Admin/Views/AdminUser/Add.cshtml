@model Cone.Areas.Admin.ViewModels.AdminUser.AddAdminUserViewModel
@{
    ViewData["Title"] = "管理者を追加";
}
@addTagHelper *, Vereyon.Web.FlashMessage

<div class="container mt-4">
    <h1 class="mb-4">管理者を追加</h1>
    <flash dismissable="true" />


    <form method="post" asp-action="AddUser">
        <div class="mb-3">
            <label asp-for="FullName" class="form-label">名前</label>
            <input asp-for="FullName" type="text" class="form-control" placeholder="山田 太郎" required maxlength="200" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TutorType" class="form-label">種別</label>
            <select asp-for="TutorType" class="form-select" required>
                <option value="">選択してください</option>
                <option value="1">TA</option>
                <option value="2">SA</option>
            </select>
            <span asp-validation-for="TutorType" class="text-danger"></span>
        </div>
        
        <div class="mb-2">
            <label asp-for="Email" class="form-label">メールアドレス</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="admin@edu.teu.ac.jp" required maxlength="200"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="alert alert-warning mb-4" role="alert">
            <strong>注意:</strong> メールアドレスは東京工科大学のアカウント(学生または教員)である必要があります。
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">追加</button>
            <a asp-action="Index" class="btn btn-secondary">キャンセル</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}